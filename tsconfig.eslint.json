{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "checkJs": false,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "scripts/**/*.ts",
    "scripts/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
