{
  "name": "fantasy-characters-api",
  "version": "1.0.0",
  "description": "RESTful API for managing fantasy characters, items, and game data",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "setup": "pnpm install && pnpm db:generate && pnpm build && pnpm db:seed",
    "setup:fresh": "pnpm clean && pnpm setup",
    "dev": "tsx watch src/server.ts",
    "dev:debug": "tsx watch --inspect src/server.ts",
    "build": "tsc && tsc-alias -p tsconfig.json --resolve-full-paths",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "clean": "rimraf dist coverage node_modules/.cache",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "tsx src/infrastructure/database/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "lint": "eslint --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "validate:coverage": "tsx scripts/validate-coverage.ts",
    "validate:env": "tsx scripts/validate-env.ts",
    "validate:openapi": "tsx scripts/validate-openapi.ts",
    "generate:openapi": "tsx scripts/generate-openapi.ts",
    "validate": "pnpm format && pnpm typecheck && pnpm lint:fix && pnpm test:coverage && pnpm validate:coverage",
    "smoke:test": "tsx scripts/smoke-tests.ts --start",
    "ci": "pnpm typecheck && pnpm lint && pnpm test:coverage && pnpm validate:env",
    "ci:quality": "pnpm run lint && pnpm run typecheck && pnpm run test:coverage",
    "ci:full": "pnpm run ci:quality && pnpm run validate:openapi",
    "docker:build": "docker build -t fantasy-characters-api .",
    "docker:run": "docker run -p 3000:3000 fantasy-characters-api",
    "docker:compose:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:compose:prod": "docker compose -f docker-compose.prod.yml up -d",
    "docker:compose:integration": "docker compose -f docker-compose.integration.yml up -d",
    "docker:compose:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:compose:prod:down": "docker compose -f docker-compose.prod.yml down",
    "docker:compose:integration:down": "docker compose -f docker-compose.integration.yml down",
    "docker:compose:all:down": "docker compose -f docker-compose.dev.yml down && docker compose -f docker-compose.prod.yml down && docker compose -f docker-compose.integration.yml down",
    "docs:generate": "tsx scripts/generate-docs.ts",
    "docs:serve": "serve docs/generated -l 8080",
    "audit": "pnpm audit --audit-level moderate",
    "deps:update": "pnpm update --latest"
  },
  "keywords": [
    "fantasy",
    "characters",
    "api",
    "fastify",
    "typescript",
    "prisma",
    "postgresql"
  ],
  "author": "Antonio Colagreco",
  "license": "MIT",
  "dependencies": {
    "@fastify/compress": "8.1.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/etag": "^6.0.3",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/session": "^11.1.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/type-provider-typebox": "^5.2.0",
    "@prisma/client": "^6.15.0",
    "@sinclair/typebox": "^0.34.41",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "ajv-keywords": "^5.1.0",
    "argon2": "^0.44.0",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "fastify-plugin": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.9.4",
    "pino-pretty": "^13.1.1",
    "sharp": "^0.34.3",
    "uuidv7": "^1.0.2"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@eslint/js": "^9.35.0",
    "@faker-js/faker": "^10.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "@types/validator": "^13.15.3",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "prisma": "^6.15.0",
    "rimraf": "^6.0.1",
    "serve": "^14.2.5",
    "striptags": "^3.2.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "validator": "^13.15.15",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.15.1"
}
