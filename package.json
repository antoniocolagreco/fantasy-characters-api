{
  "name": "fantasy-characters-api",
  "version": "1.0.0",
  "description": "RESTful API for managing fantasy characters, items, and game data",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "setup": "pnpm install && pnpm db:generate && pnpm build",
    "setup:fresh": "pnpm clean && pnpm setup",
    "dev": "tsx watch src/server.ts",
    "dev:debug": "tsx watch --inspect src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "clean": "rimraf dist coverage node_modules/.cache",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "tsx src/infrastructure/database/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:ui": "vitest --ui",
    "docker:build": "docker build -t fantasy-characters-api .",
    "docker:run": "docker run -p 3000:3000 fantasy-characters-api",
    "docker:compose": "docker-compose up -d",
    "docs:generate": "tsx scripts/generate-docs.ts",
    "docs:serve": "serve docs/generated -l 8080",
    "audit": "pnpm audit --audit-level moderate",
    "deps:update": "pnpm update --latest",
    "ci": "pnpm typecheck && pnpm lint && pnpm test:run",
    "ci:coverage": "pnpm typecheck && pnpm lint && pnpm test:coverage"
  },
  "keywords": [
    "fantasy",
    "characters",
    "api",
    "fastify",
    "typescript",
    "prisma",
    "postgresql"
  ],
  "author": "Antonio Colagreco",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/etag": "^5.2.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/multipart": "^8.3.0",
    "@fastify/oauth2": "^7.8.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/session": "^10.9.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@fastify/type-provider-typebox": "^4.1.0",
    "@prisma/client": "^5.19.1",
    "@sinclair/typebox": "^0.33.15",
    "argon2": "^0.40.3",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "isomorphic-dompurify": "^2.15.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "sharp": "^0.33.5",
    "uuidv7": "^1.0.2"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@vitest/coverage-v8": "^2.1.1",
    "@vitest/ui": "^2.1.1",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1",
    "rimraf": "^6.0.1",
    "serve": "^14.2.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
